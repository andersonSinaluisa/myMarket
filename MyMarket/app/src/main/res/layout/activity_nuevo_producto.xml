<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.NuevoProducto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_gravity="top|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/img_n_producto"
            android:layout_width="206dp"
            android:layout_height="196dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_style"
            android:foreground="?android:attr/selectableItemBackground">

        </ImageView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_marginLeft="160dp"
            android:layout_marginTop="160dp"
            android:id="@+id/fab_img_n_producto"
            android:layout_width="155dp"
            android:layout_height="103dp"
            android:layout_gravity="bottom"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_add"
            tools:ignore="MissingConstraints" />


    </RelativeLayout>
</LinearLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <EditText
            android:inputType="number"
            android:padding="5dp"
            android:background="@drawable/edittext"
            android:maxLines="1"
            android:id="@+id/cod_n_p"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

        </EditText>


        <TextView
            android:layout_marginTop="10dp"
            android:text="nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <EditText

            android:padding="5dp"
            android:background="@drawable/edittext"
            android:maxLines="1"
            android:id="@+id/nombre_n_p"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

        </EditText>

        <TextView
            android:layout_marginTop="10dp"
            android:text="unidad de medida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <Spinner
            android:id="@+id/spiner_unidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Spinner>


        <TextView
            android:layout_marginTop="10dp"

        android:text="precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
        <EditText
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:background="@drawable/edittext"
            android:maxLines="1"
            android:id="@+id/precio_n_p"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

        </EditText>


        <TextView
            android:layout_marginTop="10dp"
            android:text="precio de venta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <EditText
            android:inputType="numberDecimal"
            android:background="@drawable/edittext"
            android:padding="5dp"
            android:maxLines="1"
            android:id="@+id/pvp_n_p"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

        </EditText>
        <TextView

            android:layout_marginTop="10dp"
            android:text="Proveedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <Spinner
            android:id="@+id/spiner_proveedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Spinner>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_cancel_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/fab_margin"

        app:backgroundTint="@color/colorred"
        app:srcCompat="@drawable/ic_close"
        tools:ignore="MissingConstraints" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_n_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"

        app:backgroundTint="@color/colorgreen"
        app:srcCompat="@drawable/ic_check"
        tools:ignore="MissingConstraints" />

</FrameLayout>